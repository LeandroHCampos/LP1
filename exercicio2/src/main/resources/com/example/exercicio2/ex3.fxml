<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<TabPane prefHeight="434.0" prefWidth="638.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.exercicio2.Ex3.Ex3Controller">
    <tabs>
        <Tab text="Chapéu">
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: WHITE; -fx-padding: 10px;" BorderPane.alignment="CENTER">
                <Label alignment="CENTER" prefHeight="0.0" prefWidth="278.0" text="Chapéu" textAlignment="CENTER">
                    <font>
                        <Font size="46.0" />
                    </font>
                </Label>
                <HBox alignment="TOP_CENTER" prefHeight="32.0" prefWidth="600.0">
                    <Label prefWidth="100" text="Qual a cor?" />
                    <TextField fx:id="textFieldChapeu" prefWidth="150.0" />
                </HBox>
                <HBox alignment="TOP_CENTER" prefHeight="33.0" prefWidth="600.0">
                    <Label prefWidth="100" text="Está Visivel?" />
                    <TextField fx:id="textFieldCor" prefWidth="150" />
                </HBox>
                <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="209.0" prefHeight="33.0" prefWidth="600.0">
                    <Label prefWidth="100" text="Possui Luzes?" />
                    <TextField fx:id="textFieldTipo" prefWidth="150" />
                </HBox>
                <Button onAction="#cadastrarChapeu" text="Enviar" />
            </VBox>
        </Tab>
        <Tab text="Pessoas">
            <VBox alignment="CENTER" prefHeight="378.0" prefWidth="394.0" style="-fx-background-color: WHITE; -fx-padding: 10px;" BorderPane.alignment="CENTER">
                <children>
                    <Label alignment="CENTER" prefHeight="0.0" prefWidth="278.0" text="Pessoas" textAlignment="CENTER">
                        <font>
                            <Font size="25.0" />
                        </font>
                    </Label>
                    <ImageView fitHeight="250.0" fitWidth="300.0">
                        <image>
                            <Image url="@VikMuniz.png" />
                        </image>
                    </ImageView>
                    <HBox alignment="TOP_CENTER" prefHeight="32.0" prefWidth="600.0">
                        <children>
                            <Label prefWidth="100" text="Roupa:" />
                            <TextField fx:id="txtRoupa" />
                        </children>
                    </HBox>
                    <HBox alignment="TOP_CENTER" prefHeight="33.0" prefWidth="600.0">
                        <children>
                            <Label prefWidth="100" text="Quantas pessoas?:" />
                            <TextField fx:id="txtPessoas" />
                        </children>
                    </HBox>
                    <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="209.0" prefHeight="33.0" prefWidth="600.0">
                        <children>
                            <Label prefHeight="18.0" prefWidth="117.0" text="Segurando alavanca?:" />
                            <CheckBox fx:id="checkBoxSegurando" mnemonicParsing="false" prefWidth="150" />
                        </children>
                    </HBox>
                    <Button fx:id="cadastrarPessoas" text="Enviar" />
                </children>
            </VBox>

        </Tab>
        <Tab text="Trilho">
            <VBox alignment="CENTER" prefHeight="378.0" prefWidth="600.0" style="-fx-background-color: WHITE; -fx-padding: 10px;" BorderPane.alignment="CENTER">
                <children>
                    <Label alignment="CENTER" prefHeight="0.0" prefWidth="278.0" text="Trilho" textAlignment="CENTER">
                        <font>
                            <Font size="46.0" />
                        </font>
                    </Label>
                    <HBox alignment="TOP_CENTER" prefHeight="32.0" prefWidth="600.0">
                        <children>
                            <Label prefWidth="100" text="Material:" />
                            <TextField fx:id="txtMaterial" prefWidth="150" />
                        </children>
                    </HBox>
                    <HBox alignment="TOP_CENTER" prefHeight="33.0" prefWidth="600.0">
                        <children>
                            <Label prefWidth="100" text="Alavanca ativa?:" />
                            <CheckBox fx:id="checkBoxAlavanca" mnemonicParsing="false" prefWidth="150" />
                        </children>
                    </HBox>
                    <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="209.0" prefHeight="33.0" prefWidth="600.0">
                        <children>
                            <Label prefWidth="100" text="Comprimento:" />
                            <TextField fx:id="txtComprimento" prefWidth="150" />
                        </children>
                    </HBox>
                    <Button fx:id="cadastrarTrilho" text="Enviar" />
                </children>
            </VBox>

        </Tab>
    </tabs>
</TabPane>
